#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'commandline_ui'
require 'game'
require 'human_player'
require 'computer_player'

begin
  x = HumanPlayer.new('x')
  o = ComputerPlayer.new('o', 'x')
  board = Board.new(4)
  game = Game.new(x, o, board)

  CommandlineUI.new(game).use_colors.run
rescue Interrupt
end
